{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "esnext",
		"target": "esnext",
		"importsNotUsedAsValues": "error",
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": ["es6", "es2017", "ES2015", "ESNext"],
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"outDir": ".tsc",
		"experimentalDecorators": true,
		"rootDir": "src",
		"declaration": true
	},
	"include": [
		"**/*.ts"
	],
    "exclude": [
		"node_modules",
		"dist"
	]
}